<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PostUpload">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar_upload"
        android:background="@color/light_torq"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:hint="Enter Title of your piece"
        android:singleLine="true"
        android:id="@+id/art_title"
        android:layout_marginTop="60dp"/>


    <ImageView
        android:id="@+id/artChooser"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:paddingTop="30dp"
        android:background="@drawable/add_audio"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:hint="Enter Price of this piece"
        android:singleLine="true"
        android:id="@+id/art_price"
        android:layout_below="@+id/artChooser"
        android:inputType="numberDecimal"/>


    <Button
        android:id="@+id/uploadArtBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="30dp"
        android:text="Upload Art"
        android:background="@color/colorAccent"/>


</RelativeLayout>